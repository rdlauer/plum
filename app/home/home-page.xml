<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton icon="res://menu" 
			ios:visibility="collapsed"		
			tap="onDrawerButtonTap">
		</NavigationButton>
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Plum UI Kit for NativeScript"></Label>
    </ActionBar>

    <StackLayout>
		<Image src="~/images/plum.png" class="m-x-auto logo" width="30%" stretch="aspectFit" />
        <Label class="lbl h1 m-x-auto m-t-30" text="Welcome to Plum!" />
		<Label class="lbl m-x-auto p-t-20 p-b-30" text="Open the drawer to access UI kit views." />
		<Button class="btn btn-primary" text="Login" onTap="{{ login }}" />
		<Button class="btn btn-outline" text="Create an account" onTap="{{ signup }}" />
    </StackLayout>
</Page>
